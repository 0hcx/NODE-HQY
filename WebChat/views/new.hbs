<div class="chat-room">
    <div data-toggle="sidebar-on" class="mobile-sidebar"></div>
    <div class="chat-sidebar">
        <div class="sidebar-header">
            <div class="avatar">
                <img class="img" src="/images/mb2.jpg">
            </div>
            <div class="user-info">
                <h3 class="nickname">{{user.username}}</h3>
            </div>
        </div>
        <div class="">
            <ul id="myTab" class="nav nav-tabs">
                <li class="active">
                    <a href="#friends-list" data-toggle="tab" class="sidebar-tab">
                        <i class="fa fa-comment fa-2x"></i>
                    </a>
                </li>
                <li><a href="#usrs-list" data-toggle="tab" class="sidebar-tab">
                    <i class="fa fa-th-list fa-2x"></i>
                </a></li>
            </ul>
            <div id="myTabContent" class="tab-content">
                <div class="tab-pane fade in active" id="friends-list">
                    <ul class="nav">
                        {{#each friendList}}
                            <li data-toggle="chat" data-id="{{fid._id}}" class="friends-list">
                                <div class="avatar">
                                    <img class="img" src="/images/mb2.jpg">
                                </div>
                                <div class="username">{{fid.username}}</div>
                                <div id="r{{fid._id}}" class="unread">0</div>
                            </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="tab-pane fade" id="usrs-list">
                    <ul class="nav">
                        {{#each entries}}
                            <li data-toggle="select" data-id="{{_id}}" class="users-list">
                                <div class="avatar">
                                    <img class="img" src="/images/mb2.jpg">
                                </div>
                                <div class="username">{{username}}</div>
                                <div class="users-list-r">
                                    <a href="#" class="add-user">添加</a>
                                </div>
                            </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div data-toggle="sidebar-off" class="chat-box">
        <h3 class="chat-default">未选择聊天</h3>
        <div class="chat-area">
            <div class="box-send">
                <!--qq表情-->
                <div class="send-head">
                    <div class="emotion"></div>
                    <div class="img-send">
                        <input type="file" id="uploadFile" multiple="multiple"  accept="image/*">
                        <a class="btn btn-primary"><i class="fa fa-camera fa-fw"></i></a>
                        <a class="btn btn-primary" id="UploadBtn"><i class="fa fa-upload fa-fw"></i> 上传</a>
                    </div>
                </div>
                <form action="">
                    <div class="send-bd">
                        <textarea class="textarea" id="msg" name="msg" style="width: 100%; max-width: 720px; height: 110px; max-height: 110px;font-size: 14px; line-height: 18px; border: 1px solid #EEEEEE; padding: 10px; background-color: #EEEEEE" required></textarea>
                        <button type="submit" class="btn btn-primary pull-right" id="sendBtn">发送</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="/chat/chat.js"></script>
<script src="/lib/jquery/jquery.qqFace.js"></script>