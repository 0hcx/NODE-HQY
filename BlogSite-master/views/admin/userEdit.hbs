<div class="content-wrapper">
    <section class="content-header">
        <h1>用户编辑</h1>
    </section>
    <section class="content mobile-width">
		<div class="row">
        <div class="col-md-12">
			<div class="box">
				<form id="defaultForm" action="">

                    <div class="box-body pad">
                        <div class="form-group user-title">
                            <label>用户名称</label>
                            <h1>{{user.username}}</h1>
                            <input type="hidden" id="userId" value="{{user._id}}">
                        </div>
                        <div class="form-group">
                            <label>邮箱地址</label>
                            <input class="form-control" id="newEmail" placeholder="{{user.email}}" required>
                        </div>
                        <div class="form-group">
                            <label>居住地址</label>
                            <input type="text" class="form-control" id="newAddress" placeholder="{{user.address}}" required>
                        </div>
                        <div class="form-thumb">
                            <img  class="img-thumbnail" id="newUserImg" src="{{user.userImg}}">
                        </div>
                    </div>

					<div class="box-footer user-edit">
						<input type="file" id="uploadFile" multiple="multiple"  accept="image/*">
						<a class="btn btn-primary"><i class="fa fa-camera fa-fw"></i> 选择文件</a>
						<a class="btn btn-primary disabled" id="UploadBtn"><i class="fa fa-upload fa-fw"></i> 上传</a>
                        <a href="/p/blogs" class="btn btn-primary">取消</a>
						<button type="submit" class="btn btn-primary pull-right" id="updateBtn">保存</button>
					</div>
				</form>
			</div>
        </div>
      </div>
    </section>
</div>
<div class="pg-wrapper">
	<div class="pg-layer">
		<div class="pg-bar"></div>
		<span class="pg-info">0%</span>
	</div>
</div>

<script src="/lib/socket.io/socket.io.js"></script>
<script src="/blog/userEdit.js"></script>
<script src="/blog/common.js"></script>

