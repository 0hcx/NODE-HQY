<div class="content-wrapper">
    <section class="content-header">
        <h1>
            文章管理
            <small>关于H5/JS/CSS3/NODEJS的文章</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> 文章管理</a></li>
            <li class="active">新建文章</li>
        </ol>
    </section>
    <section class="content">
		<div class="row">
        <div class="col-md-12">
			<div class="box">
				<form id="defaultForm" action="">
					<div class="box-header">
						<input type="text" class="form-control" id="newsTitle" placeholder="文章标题" required>
					</div>
                    <div class="form-thumb">
                        <img  class="img-thumbnail" id="newThumb">
                    </div>
					<div class="box-body pad">
						<textarea class="textarea" id="newsContent" placeholder="文章内容" style="width: 100%; height: 300px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" required></textarea>
					</div>
					<div class="box-footer">
						<input type="file" id="uploadFile" multiple="multiple"  accept="image/*">
						<a class="btn btn-primary"><i class="fa fa-camera fa-fw"></i> 选择文件</a>
						<a class="btn btn-primary disabled" id="UploadBtn"><i class="fa fa-upload fa-fw"></i> 上传</a>
                        <a href="/admin/newsList" class="btn btn-primary">取消</a>
						<button type="submit" class="btn btn-primary pull-right" id="addNewsBtn">发布文章</button>
					</div>
				</form>
			</div>
        </div>
      </div>
    </section>
</div>
<div class="pg-wrapper">
	<div class="pg-layer">
		<div class="pg-bar"></div>
		<span class="pg-info">0%</span>
	</div>
</div>

<script src="/lib/socket.io/socket.io.js"></script>
<script src="/blog/newsAdmin.js"></script>
<script src="/blog/common.js"></script>

